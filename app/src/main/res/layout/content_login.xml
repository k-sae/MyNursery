<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kareem.mynursery.authentication.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent"
        android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/multi_space_extra">
            <Switch
                android:layout_width="wrap_content"
                android:id="@+id/is_school_owner_switch"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/space_extra"
                android:paddingRight="@dimen/space_extra"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nursery_owner" android:layout_toStartOf="@id/is_school_owner_switch" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <com.hbb20.CountryCodePicker
                android:layout_width="wrap_content" android:id="@+id/country_picker"
                android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:id="@+id/phone_number"
        android:drawableEnd="@drawable/call"
        />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:visibility="gone" android:id="@+id/verification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verification_key" android:inputType="number"
                android:hint="@string/verification_code"
                android:drawableEnd="@drawable/password"
                />
            <Button
                android:layout_width="match_parent" android:id="@+id/verify"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/textSecondary"
                android:text="@string/verify" />
        </LinearLayout>
    <Button
        android:layout_width="match_parent" android:id="@+id/send_verification"
        android:layout_height="wrap_content"
        android:text="@string/send_verification_code"
        android:background="@color/colorSecondary"
        android:textColor="@color/textSecondary"
        />

    </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent" android:layout_above="@id/content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:id="@+id/informative_textView"
          android:textColor="@color/colorPrimary"
          />
  </RelativeLayout>
</RelativeLayout>
