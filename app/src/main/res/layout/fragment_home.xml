<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/holder"
        android:layout_height="wrap_content" android:layout_alignBottom="@id/slider">
     <include layout="@layout/overlay_slider_items" android:layout_height="wrap_content" android:layout_width="match_parent"/>
    </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:text="@string/search_for_nursery"
        android:id="@+id/search_for_nursery"
        android:layout_below="@id/slider"
        android:layout_margin="@dimen/multi_space_extra"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_school"
            android:contentDescription="@string/search_for_nursery"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/location2"
            android:contentDescription="@string/search_for_nursery"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_size"
            android:layout_centerInParent="true" android:text="@string/search_for_nursery" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileAddNursery"
        android:text="@string/add_nursery"
        android:textAlignment="center"
        android:textSize="@dimen/text_title_size"
        android:drawableStart="@drawable/add_school"
        android:drawableEnd="@drawable/list"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginBottom="27dp"
        android:layout_below="@+id/search_for_nursery"
        android:layout_alignStart="@+id/search_for_nursery"
        android:layout_alignEnd="@+id/search_for_nursery" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/multi_space_extra"
        android:id="@+id/linearLayout">
        <ImageView
            style="@style/homeButtons"
            android:src="@drawable/instagram"
            android:contentDescription="@string/instagram"
            android:id="@+id/instagram"/>

        <ImageView
            android:src="@drawable/snapchat"
            style="@style/homeButtons"
            android:id="@+id/snapchat"
            android:contentDescription="@string/snapchat"/>
        <ImageView
            style="@style/homeButtons"
            android:src="@drawable/whatsapp"
            android:id="@+id/whatsapp"
            android:contentDescription="@string/whatsapp"
            />


    </LinearLayout>

</RelativeLayout>
