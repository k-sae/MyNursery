<?xml version="1.0" encoding="utf-8"?>
<com.kareem.mynursery.ExpandableHeightRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <com.daimajia.slider.library.SliderLayout
        android:background="@color/cardview_dark_background"
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/favorite"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/favourites"
        android:layout_margin="@dimen/multi_space_extra"
        android:id="@+id/fav_button"
        android:visibility="invisible"
        />
 <include layout="@layout/overlay_slider_items" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp" android:background="@color/colorPrimary"/>
</com.kareem.mynursery.ExpandableHeightRelativeLayout>