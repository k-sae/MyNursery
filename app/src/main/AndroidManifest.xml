<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kareem.mynursery">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.ACCESS_ASSISTED_GPS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".authentication.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".nursery.AddNursery" />
        <activity
            android:name=".nursery.LocationPicker"
            android:label="@string/title_activity_location_picker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".profile.Test"></activity>
        <activity
            android:name=".nursery.NurseryListActivity"
            android:label="@string/title_activity_nursery_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".nursery.FilterActivity"
            android:label="@string/title_activity_filter"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>